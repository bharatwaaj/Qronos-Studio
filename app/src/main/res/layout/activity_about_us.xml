<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/about_us_main_relative"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/primaryColorDark"
    tools:context="design.material.myapplication.AboutUsActivity">

    <include
        android:id="@+id/appBar_aboutUs"
        layout="@layout/app_bar" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_about_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appBar_aboutUs"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <LinearLayout
            android:id="@+id/relative_layout_about_us_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/text_view_about_us_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_margin="2dp"
                android:text="Reach"
                android:textColor="@color/grey"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/text_view_about_us_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="2dp"
                android:text="- A Qronos Destination"
                android:textColor="@color/grey"
                android:textSize="20dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_view_about_us"
        android:id="@+id/card_view_about_us_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="15dp">
        <TextView
            android:id="@+id/text_view_about_us_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="This is one of the QRONOS initiative to introduce a market place where people can come in and sell their own hand made products here . We are concerned about the features that we give to the commodity and that defines our creation and the respect we get back. And now , you know the rest ! Happy Shopping ! :)"
            android:textColor="@color/grey"
            android:textSize="15dp" />
    </android.support.v7.widget.CardView>
</RelativeLayout>
